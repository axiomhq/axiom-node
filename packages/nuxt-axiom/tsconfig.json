{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "baseUrl": "lib",
        "allowJs": false,
        "sourceMap": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,    
        "outDir": "./dist",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017",
            "ES2020"
          ],      
    },
    "exclude": [
        ".git",
        ".github",
        "node_modules",
    ],
    "include": [
        "src/**/*.ts"
    ]
}